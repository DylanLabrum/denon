<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:paddingRight="20dip" android:paddingTop="20dip"
		android:layout_weight="1">
		<ImageButton android:id="@+id/btnZone"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<ImageButton android:id="@+id/btnMute"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_weight="4" android:paddingTop="20dip"
		android:paddingRight="20dip">
		<Button android:id="@+id/btnInput" android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
		<Button android:id="@+id/btnMode" android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
		<Button android:id="@+id/btnDisplay" android:text="@string/OnScreenDisplay"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout android:orientation="vertical"
		android:paddingTop="20dip" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:paddingRight="20dip"
		android:layout_weight="1" android:id="@+id/panelMenus">
		<Button android:id="@+id/btnQuick" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/quickSelect" />

		<Button android:id="@+id/btnLevels" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/Level" />
		<Button android:id="@+id/btnExtras" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/optionsSelect" />
	</LinearLayout>

	<LinearLayout android:orientation="vertical"
		android:paddingTop="20dip" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:paddingRight="20dip"
		android:layout_weight="1">
		<Button android:id="@+id/btnMacro1" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="F1" />
		<Button android:id="@+id/btnMacro2" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="F2" />
		<Button android:id="@+id/btnMacro3" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="F3" />
	</LinearLayout>


	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:paddingTop="20dip" android:layout_weight="1">
		<ImageButton android:id="@+id/btnVolUp" android:src="@drawable/plus"
			android:layout_width="100dip" android:layout_height="wrap_content"
			android:layout_weight="1" style="@style/VolumeButtons" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textVolume"
			android:gravity="center" />
		<ImageButton android:id="@+id/btnVolDown" android:src="@drawable/minus"
			android:layout_width="100dip" android:layout_height="wrap_content"
			android:layout_weight="1" style="@style/VolumeButtons" />
	</LinearLayout>

</LinearLayout>
